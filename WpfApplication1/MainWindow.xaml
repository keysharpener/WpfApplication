<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Subtitle Sniffer" SizeToContent="WidthAndHeight" Width="692">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="211*"/>
            <ColumnDefinition Width="131*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        <DataGrid VerticalAlignment="Bottom" Height="388" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox Grid.Row="0" x:Name="Path" HorizontalAlignment="Left" Height="23" Margin="94,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.25,0.261"/>
        <Label Grid.Row="0" x:Name="FolderLabel" Content="Base Path" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button Grid.Row="0" Content="..." HorizontalAlignment="Left" Margin="231,13,0,0" VerticalAlignment="Top" Width="22" Height="23" Click="Button_MouseClick"/>
    </Grid>
</Window>
